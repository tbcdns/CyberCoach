<div class="hero-unit">

<h1>Events</h1>
  <div class="row">
    <div class="span8 offset2">
<table class="table table-hover" style="width:85%;">
  <tr><td><b>Name</b></td><td><b>Sport</b></td><td><b>Start</b></td><td><b>End</b></td><td><b>Full</b></td></tr>
<% @events.each do |event| %>
     <tr>
      <td><%= link_to event.name, event %></td>
      <td><%= event.sport_id %></td>
      <td><%= event.begin %></td>
       <td><%= event.end %></td>
      <td><%= if event.close?
               'yes'
              else
               'no'
              end %></td>
     </tr>
<% end %>
</table>
  </div>
    </div>
</div>