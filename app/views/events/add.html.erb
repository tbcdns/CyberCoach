<%= javascript_include_tag "jquery-ui-rails/vendor/assets/javascripts/jquery.ui.datepicker-eu.js" %>
<script>
    $(document).ready(function() {
        alert('ok');
        $("#event_description").datepicker();
    });
</script>

<% provide(:title, 'Add an event') %>
<div class="hero-unit">
  <h1 class="center">Add an event</h1>  <br>
  <div class="row">
    <div class="span6 offset2">
      <%= form_for @events, :url => { :controller => "events", :action => "add" } do |f| %>


          <%= f.label :name %>
          <%= f.text_field :name%>

          <%= f.label :description %>
          <%= f.text_field :description %>

          <%= f.label :sport %>

          <%= f.label :nb_players %>
          <%= f.number_field :nb_players %>

          <%= f.label :begin %>
          <%= f.text_field :description %>


          <%= f.submit "Create an event", :class => "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
