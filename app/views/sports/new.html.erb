<% provide(:title, 'New event') %>
<div class="hero-unit" style="width:500px;">
  <h1 class="center">New sport</h1>  <br>
  <div class="row">

      <%= form_for(@sport) do |f| %>

          <%= f.label :name %>
          <%= f.text_field :name %>

          <%= f.label :description %>
          <%= f.text_area :description, :rows => '4' %>

        <%= f.submit "Add new sport", :class => "btn btn-large btn-primary" %>
      <% end %>

  </div>
</div>
